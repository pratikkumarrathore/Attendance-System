<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Attendance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.Attendance.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <!--MY NIGHT MODE -->
    <style name="SCREEN">
        <item name="android:background">#000</item>
    </style>

    <style name="SCREEN_ANIMATED">
        <item name="android:background">@drawable/gradient_animation</item>
    </style>

    <style name="SCREEN_WHITE">
        <item name="android:background">#FFF</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="HINT">
        <item name="android:textColorHint">#404040</item>
    </style>

    <style name="BUTTON_RED">
        <item name="android:background">@drawable/button_anim01</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="BUTTON_BLUE">
        <item name="android:background">@drawable/button_anim02</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="BACKGROUND">
        <item name="android:background">?android:attr/panelFullBackground</item>
    </style>

    <!--MY NIGHT MODE -->



</resources>