<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Attendance" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Attendance.Fullscreen" parent="Theme.Attendance">
        <item name="android:actionBarStyle">@style/Widget.Theme.Attendance.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Attendance.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!--MY LIGHT MODE -->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <style name="SCREEN_ANIMATED">
        <item name="android:background">@drawable/gradient_animation</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>
    <style name="BUTTON_RED">
        <item name="android:background">@drawable/button_anim01</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="BUTTON_BLUE">
        <item name="android:background">@drawable/button_anim02</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="BACKGROUND">
        <item name="android:background">@drawable/common_google_signin_btn_icon_light_normal_background</item>
    </style>

    <!--MY LIGHT MODE -->




</resources>